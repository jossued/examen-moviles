<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormularioMateriaActivity">

    <TextView
            android:text="codigo barra:"
            android:layout_width="92dp"
            android:layout_height="20dp"
            android:id="@+id/textView5" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
    />
    <TextView
            android:text="nombre:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
    />
    <TextView
            android:text="codigo materia:"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView7" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="descripción materia:"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView8" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="fecha creación:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
    />
    <TextView
            android:text="horas/semana:"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/textView10" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_codigo_barra" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.467"/>
    <EditText
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText_nombre_materia" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_codigo_barra" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.561"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_codigo_materia"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/editText_nombre_materia"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText_desc_materia" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_codigo_materia" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText_fechac_materia" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_desc_materia" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView9"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.484"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_horas_materia" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_fechac_materia" app:layout_constraintStart_toEndOf="@+id/textView10"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.431"/>
    <CheckBox
            android:text="activo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_activo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/editText_horas_materia"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_guardarm"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_activo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"/>
    <Button
            android:text="Foto"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/button_foto" app:layout_constraintEnd_toStartOf="@+id/button_guardarm"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_activo" app:layout_constraintHorizontal_bias="0.289"/>
</android.support.constraint.ConstraintLayout>