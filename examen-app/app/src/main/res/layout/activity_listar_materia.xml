<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListarMateriaActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="493dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/rview_materias"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_crear_materia"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_nombresE" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_apellidosE" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.351"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_apellidosE" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="76dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_fechaNacimiento" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textView_semestreE"
            android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_nombresE" app:layout_constraintHorizontal_bias="0.344"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_semestreE" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_apellidosE"/>
    <Button
            android:text="Nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_crear_materia" app:layout_constraintStart_toStartOf="@+id/textView_semestreE"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_semestreE"
            app:layout_constraintEnd_toEndOf="@+id/textView_semestreE" app:layout_constraintHorizontal_bias="0.551"/>
</android.support.constraint.ConstraintLayout>